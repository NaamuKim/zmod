{
  "name": "zmod",
  "version": "0.2.0",
  "description": "Lightning-fast codemod toolkit powered by Rust and oxc",
  "keywords": [
    "ast",
    "codemod",
    "jscodeshift",
    "oxc",
    "refactor",
    "rust",
    "transform"
  ],
  "files": [
    "dist",
    "*.node"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:napi": "napi build --platform --release --pipe \"tsc\"",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "vitest run",
    "artifacts": "napi artifacts"
  },
  "dependencies": {
    "tinyglobby": "^0.2.12"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^25.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "napi": {
    "binaryName": "zmod",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu"
    ]
  }
}
